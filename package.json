{
  "name": "my-pharmacy-app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-packager .",
    "pack-win": "electron-packager . Pharmapp --platform=win32 --arch=x64 --icon=icons/icon.ico --out=release --asar --overwrite",
    "pack-mac": "electron-packager . Pharmapp --platform=darwin --arch=x64 --icon=icons/icon.icns --out=release --asar --overwrite",
    "pack-linux": "electron-packager . Pharmapp --platform=linux --arch=x64 --icon=icons/icon.png --out=release --asar --overwrite"
  },
  "devDependencies": {
    "electron": "^29.1.4",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "electron-is-dev": "^3.0.1",
    "express": "^4.18.2",
    "fs": "^0.0.1-security",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "node-forge": "^1.3.1",
    "node-machine-id": "^1.1.12",
    "sqlite3": "^5.1.7",
    "xml-crypto": "^6.0.0",
    "xmlbuilder": "^15.1.1"
  }
}
